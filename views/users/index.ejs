<%- include('../partials/header') %>

<% if (user) { %>
  <body>
    <div class="profile-body-container">
      <div class="user-info-container">
        <h3><%= user.name %></h3>
        <img class="img-profile" width="300" src='<%= user.avatar %>'>
        <div class="profile-text">
          Email - <%= user.email %><br>
          Bio - I like long walks on the beach!
        </div>
      </div>
      <div class="visited-parks-wrapper">
        <h3 class="visited-main-head">Parks I have Visited</h3>
        <% parksVisited.forEach(function(v) { %>
          <div class="park-card-wrapper">
            <%= v.name %>
            <div class="card-img-wrapper">
                <img src='<%= v.photoURL %>' alt='card image wrapper'>
            </div>
            <form action="/users/index/<%= v._id %>/deleteVisitedPark?_method=DELETE"
              class="delete-form" method="POST">
              <button class="delete-form-button" type="submit">Remove</button>
            </form>
            <button class="add-comment-button">Add Comment</button>
          </div>
        <% }); %> 
      </div>

      <div class="wished-parks-wrapper">
        <h3 class="wished-main-head">Wish List</h3>
        <% parksWished.forEach(function(w) { %>
          <div class="park-card-wrapper">
            <%= w.name %>
            <div class="card-img-wrapper">
                <img src='<%= w.photoURL %>' alt='card image wrapper'>
            </div>
            <form action="/users/index/<%= w._id %>/deleteWishedPark?_method=DELETE"
              class="delete-form" method="POST">
              <button class="delete-form-button" type="submit">Remove</button>
            </form>
            <button class="add-comment-button">Add Comment</button>
          </div>
        <% }); %> 
      </div>

<% } else { %>
  <div class="error-container">
    <h3 class="error-title">Please login to access your  profile!</h3>
    <img class="nps-logo-large" src="../images/NPS_Logo_Hi_Res.png" alt="NPS Logo">
    <h2 class="error-title">Once logged in you will be able to access your lists!</h2>
</div>
<% } %>

